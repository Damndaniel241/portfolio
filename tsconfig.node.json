{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["@types/node"],
    "paths": {
      "@/*": ["src/*"]
    },

    "composite": true, //i added this. wasn't there at all

    /* Bundler mode */
    "moduleResolution": "Bundler",
    // "allowImportingTsExtensions": true,  i commented this
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,  //i changed this

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["vite.config.ts"]
}
